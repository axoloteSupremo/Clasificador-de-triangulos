#include <iostream>
using namespace std; 

int main(){
    int lado1; 
    int lado2; 
    int lado3; 
    cout << "Ingresa un lado:" << endl; 
    cin >> lado1; 
    cout << "Ingresa otro lado:" << endl;
    cin >> lado2;
    cout << "Ingresa un último lado" << endl; 
    cin >> lado3; 
    if (lado1 == lado2 == lado3 ){
        cout << "Tienes un triángulo equilatero.";
    } else if (lado1 == lado2 != lado3 || lado2 == lado3 !=lado1 ||lado1 == lado3 != lado2 ){
        cout << "Tienes un triángulo isósceles";
    } else if(lado1 != lado2 != lado3){
        cout << "Tienes un triángulo escaleno";

    } else {
        cout << "No ingresaste un número válido. Intenta de nuevo";
    }
